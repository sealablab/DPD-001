[
  // Custom keybindings matching Obsidian workflow preferences
  // Note: Some Obsidian-specific actions don't have direct Cursor equivalents
  // but these bindings follow similar patterns
  
  {
    "key": "shift+enter",
    "command": "editor.action.insertLineAfter",
    "when": "editorTextFocus && !editorReadonly"
  },
  
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.terminal.new",
    "when": "!terminalFocus"
  },
  
  // Additional useful bindings for development workflow
  {
    "key": "cmd+k cmd+s",
    "command": "workbench.action.files.saveAll"
  },
  
  {
    "key": "cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  
  {
    "key": "cmd+j",
    "command": "workbench.action.togglePanel"
  }
]

