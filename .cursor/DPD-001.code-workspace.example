{
  // ============================================
  // WORKSPACE FILE FEATURES
  // ============================================
  // This is an EXAMPLE showing all available features
  // Your actual workspace file is: DPD-001.code-workspace
  // ============================================
  
  // 1. MULTI-ROOT WORKSPACES (Biggest advantage!)
  // You can have multiple folders in one workspace
  "folders": [
    {
      "path": "..",
      "name": "DPD-001 Main"
    },
    {
      "path": "../libs/moku-models-v4",
      "name": "Moku Models Library"
    },
    {
      "path": "../happy-cli",
      "name": "Happy CLI"
    }
    // Each folder can have different settings!
  ],
  
  // 2. WORKSPACE-SPECIFIC SETTINGS
  // These override user settings but not folder settings
  "settings": {
    // ... your settings here ...
  },
  
  // 3. EXTENSION RECOMMENDATIONS
  // Team members get prompted to install these
  "extensions": {
    "recommendations": [
      "ms-python.python",
      "ms-python.black-formatter",
      "ms-python.vscode-pylance",
      // Add VHDL extensions, etc.
    ],
    "unwantedRecommendations": [
      // Extensions to NOT suggest
    ]
  },
  
  // 4. TASKS (Build, test, run commands)
  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build VHDL",
        "type": "shell",
        "command": "make",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Run Tests",
        "type": "shell",
        "command": "python tests/run.py",
        "group": "test"
      }
    ]
  },
  
  // 5. LAUNCH CONFIGURATIONS (Debugging)
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal"
      }
    ]
  },
  
  // 6. SNIPPETS (Workspace-specific code snippets)
  // Note: Snippets are usually in .cursor/snippets/ directory
  // But workspace files can reference them
  
  // 7. FOLDER-SPECIFIC SETTINGS
  // You can't do this in .cursor/settings.json!
  "folders": [
    {
      "path": "..",
      "name": "DPD-001",
      "settings": {
        // Settings ONLY for this folder
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
      }
    }
  ]
}

